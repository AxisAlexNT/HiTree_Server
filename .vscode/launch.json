      "request": "launch",
      "module": "hict_server",
      "env": {
          "PYTHONPATH": "C:\\Users\\tux\\Documents\\HiCT\\HiCT_Library"
      },
      "args": [
          "--verbose"
      ],
      "justMyCode": true
  },
